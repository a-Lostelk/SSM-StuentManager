<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunny.dao.UserDao">
    <select id="findByUserName" parameterType="String" resultType="com.sunny.entity.User">
        SELECT * FROM user WHERE username=#{username}
    </select>

    <insert id="add" parameterType="com.sunny.entity.User">
        INSERT INTO user(username,password)VALUE (#{username},#{password})
    </insert>

    <select id="findList" resultType="com.sunny.entity.User" parameterType="java.util.Map">
        SELECT * FROM user WHERE username LIKE #{username} limit #{offset},#{pageSize}
    </select>

    <select id="getTotal" resultType="java.lang.Integer" parameterType="java.util.Map">
        SELECT COUNT(id) FROM user WHERE username LIKE #{username}
    </select>

    <update id="edit" parameterType="com.sunny.entity.User">
        UPDATE user SET username=#{username},password=#{password} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user where id in (${value})
    </delete>

</mapper>