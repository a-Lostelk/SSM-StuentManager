<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunny.dao.GradeDao">
    <insert id="add" parameterType="Grade">
         INSERT INTO grade(name,remark)VALUE (#{name},#{remark})
    </insert>
    <update id="edit" parameterType="Grade">
        UPDATE grade SET name=#{name},remark=#{remark} WHERE id = #{id}
    </update>
    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM grade where id in (${value})
    </delete>
    <select id="findList" resultType="com.sunny.entity.Grade" parameterType="java.util.Map">
        SELECT * FROM grade WHERE name LIKE #{name} limit #{offset},#{pageSize}
    </select>
    <select id="getTotal" resultType="java.lang.Integer" parameterType="java.util.Map">
        SELECT COUNT(id) FROM grade WHERE name LIKE #{name}
    </select>
    <select id="findAll" resultType="com.sunny.entity.Grade">
        SELECT * FROM grade
    </select>
</mapper>